   <script type="text/javascript">
	$(document).ready(function() { 
		
		$("#SupplierID").jCombo("<?php echo URL::to('Nproducts/comboselect?filter=suppliers:SupplierID:CompanyName'); ?>",
		{  selected_value : '<?php echo $row["SupplierID"]; ?>' });
		
		$("#CategoryID").jCombo("<?php echo URL::to('Nproducts/comboselect?filter=categories:CategoryID:CategoryName'); ?>",
		{  selected_value : '<?php echo $row["CategoryID"]; ?>' });
		 
		$(function(){
		tinymce.init({	
			mode : "specific_textareas",
			editor_selector : "mceEditor",
			 plugins : "openmanager",
			 file_browser_callback: "openmanager",
			 open_manager_upload_path: '../../../../../../../../uploads/images/',
		 });	
	});

	});
	</script>		 